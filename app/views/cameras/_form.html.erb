<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add my camera ðŸ“·</h1>
<%= simple_form_for @camera do |f| %>
  <div class="form-group">
    <%= f.label :brand, "Select Brand" %>
    <%= f.select :brand, Camera::BRANDS, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :model, "Select Model" %>
    <%= f.text_area :model, class: "form-control", placeholder: "Enter model name" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Enter camera details" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Price per day (in $)" %>
    <%= f.number_field :price, class: "form-control", min: 0 %>
  </div>

    <div class="form-group">
    <%= f.label :photo, "Upload Picture" %>
    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <%= f.submit "Save Camera", class: "btn btn-primary mt-3" %>
  <% end %>
        </div>
      </div>
    </div>
</div>
