<div class="container mt-5">
  <!-- Camera Title -->
  <h3 class="text-center mb-4 text-primary"><%= @camera.brand %> - <%= @camera.model %></h3>

  <div class="card mb-4 mx-auto" style="max-width: 1100px;">
    <div class="row g-0">
      <!-- Camera Image -->
      <div class="col-md-6">

        <%= cl_image_tag(@camera.photo.key, class: "img-fluid rounded-start h-100 w-100", alt: @camera.brand) %>

      </div>

      <!-- Camera Details -->
      <div class="col-md-6 d-flex align-items-center">
        <div class="card-body">
          <p class="card-text text-muted"><%= @camera.description %></p>
          <p class="card-text"><strong>Price:</strong> Â¥<%= @camera.price %></p>

          <!-- Reserve Button (Collapsible Form) -->
          <button class="btn btn-outline-primary w-100 mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#reserveForm">
            ðŸ“… Reserve This Camera
          </button>
          <div class="collapse mt-3" id="reserveForm">
            <%= render 'reservations/form', reservation: @reservation, camera: @camera %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Back to Home Button -->
  <div class="text-center mt-4">
    <%= link_to 'Back to home', cameras_path, class: "btn btn-secondary" %>
  </div>
</div>
