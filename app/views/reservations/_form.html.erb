<%= simple_form_for([camera, reservation], html: { data: { controller: 'datepicker' }}) do |f| %>
  <%= f.input :start_date, as: :string, input_html: { data: { action: 'change->datepicker#updateDates', datepicker_target: 'startDate' }} %>
  <%= f.button :submit, 'Submit Reservation', class: 'btn btn-primary' %>
<% end %>
