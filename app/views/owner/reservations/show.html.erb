<h1>Reservation Details</h1>

<p><strong>Camera:</strong> <%= @reservation.camera.brand %> <%= @reservation.camera.model %></p>
<p><strong>Status:</strong> <%= @reservation.status %></p>
<p><strong>Start Date:</strong> <%= @reservation.start_date %></p>
<p><strong>End Date:</strong> <%= @reservation.end_date %></p>

<% if @reservation.status == "pending" %>
  <%= link_to "Accept", owner_reservation_path(@reservation), method: :put, data: { reservation: { status: "accepted" } } %>
  <%= link_to "Reject", owner_reservation_path(@reservation), method: :put, data: { reservation: { status: "rejected" } } %>
<% end %>

<%= link_to "Back to Reservations", owner_reservations_path %>
