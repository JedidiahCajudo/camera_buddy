<h1>Your Reservations</h1>

<% @reservations.each do |reservation| %>
  <div class="reservation">
    <p>Camera: <%= reservation.camera.brand %> <%= reservation.camera.model %></p>
    <p>Status: <%= reservation.status %></p>

    <%= link_to "View Details", owner_reservation_path(reservation) %>

    <% if reservation.status == "pending" %>
      <%= link_to "Accept", owner_reservation_path(reservation), method: :put, data: { reservation: { status: "accepted" } } %>
      <%= link_to "Reject", owner_reservation_path(reservation), method: :put, data: { reservation: { status: "rejected" } } %>
    <% end %>
  </div>
<% end %>
